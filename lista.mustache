<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <link rel="stylesheet" type="text/css" href="Forma.css" media="All" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/style.css" rel="stylesheet" type="text/css">
    <script type="text/javascript" src="js/notas.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
        <a class="navbar-brand" href="/forma"><b>&nbsp;&nbsp;&nbsp;Registro de Estudiantes </b></a>
    </nav>
    <br>
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-10 col-md-8 col-lg-8 col-xl-8">
            <div class="container">
                <div class="card bg-danger text-white" style="border-radius: 1rem;">
                    <div class="card-body p-4 text-center">
                        <h2 class = "text-white fw-bold mb-2" id="texto">Ingresar Datos</h2>
                        <form id="formulario">
                          <fieldset >
                            <label id="itemlabel1" for="Nombre">Codigo:</label>
                            <br>
                            <input id="codigo" class="iteminput" type="text"/>
                            <br><br>
                            <label id="itemlabel2" for="Codigo">Nombre:</label>
                            <br>
                            <input id="nombre" class="iteminput" type="text"/>
                            <br>
                          
                          </fieldset>
                        </form> 
                        <br>
                        <button id="registro" onclick="RegistroAlumno()">Registrar Estudiante</button>   
                    </div>
                </div>
            </div>
        </div>
    </div>     
    <div id="div" align="center">
        
        <H1>Listado de Estudiantes</H1>

        <table id="tabla-registro" border="1">
          <thead>
            <tr>
              <th>Codigo</th><br>
              <th>Nombre</th><br>
              
            </tr>
          </thead>
          <tbody id="tablaalumno">
            
          </tbody>
        </table>  
    </div>
          
    </div>
  </body>
</html>

<script>

var notasJSON = [];

    window.onload=cargarEventos;

function cargarEventos(){
  document.getElementById("registro").addEventListener("click",RegistroAlumno,false);
}


    function RegistroAlumno(event){
      event.preventDefault();

      var nuevocodigo=document.getElementById("codigo").value;
      var nuevonombre=document.getElementById("nombre").value;
    

      var nuevoregistro={ codigo: nuevocodigo, nombre: nuevonombre};

      notasJSON.push(nuevoregistro);

      var cuerpotabla=document.getElementById("tablaalumno");
      var tablallena="";

      for (var i = 0; i< notasJSON.length; i++) {
        tablallena+= "<tr><td>" + notasJSON[i].codigo + "</td><td>" + notasJSON[i].nombre + "</td></tr>";
      }

      cuerpotabla.innerHTML=tablallena;

    }

 



</script>